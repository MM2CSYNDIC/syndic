<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!-- @author LYES KHERBICHE -->
<hibernate-mapping>
    <class name="fr.upond.syndic.repo.model.common.Message" table="MESSAGE">
        <id name="id" type="int" column="ID">
            <generator class="native"/>
        </id>
        <property name="userNameDestinataire" column="USERNAMEDESTINATAIRE" />
        <property name="userNameEmetteur" column="USERNAMEEMETTEUR" />
        <property name="object" column="OBJECT" />
        <property name="content" column="CONTENT" />
        <property name="statut" column="STATUT" />

    </class>
</hibernate-mapping>